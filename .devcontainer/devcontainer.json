{
	"name": "Python CUDA Development",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"containerEnv": {
		"UV_PROJECT_ENVIRONMENT": "/home/ubuntu/.venv"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.defaultInterpreterPath": "/home/ubuntu/.venv/bin/python",
				"python.analysis.typeCheckingMode": "strict",
				"files.watcherExclude": {
					"**/.venv/**": true
				},
				"python.analysis.exclude": [
					"**/.venv/**"
				]
			}
		}
	},
	"postCreateCommand": "uv sync --all-groups",
	"remoteUser": "ubuntu"
}
