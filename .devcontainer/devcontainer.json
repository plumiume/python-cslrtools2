{
	"name": "Python CUDA Development",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"containerEnv": {
		"UV_PROJECT_ENVIRONMENT": "/root/.venv",
		"UV_CACHE_DIR": "/root/.cache/uv"
	},
	"mounts": [
		"source=python-cslrtools2-uv-cache,target=/root/.cache/uv,type=volume"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.defaultInterpreterPath": "/root/.venv/bin/python",
				"python.analysis.typeCheckingMode": "strict",
				"files.watcherExclude": {
					"**/.venv/**": true
				},
				"python.analysis.exclude": [
					"**/.venv/**"
				]
			}
		}
	},
	"postCreateCommand": "uv sync --all-groups",
	"remoteUser": "root"
}
